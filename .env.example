# Firebase Configuration
# Hämta dessa från Firebase Console: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# Firebase Admin SDK (för server-side operations)
# Hämta service account key från Firebase Console > Project Settings > Service Accounts
# Konvertera JSON-filen till en string och sätt som env variable
# Alternativt: använd GOOGLE_APPLICATION_CREDENTIALS som pekar på JSON-filen
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Stripe Configuration
# Hämta dessa från Stripe Dashboard: https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs för olika paket
STRIPE_PRICE_ID_1=price_your_1_reading_price_id
STRIPE_PRICE_ID_5=price_your_5_readings_price_id
STRIPE_PRICE_ID_10=price_your_10_readings_price_id

# Application Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# OpenAI Configuration
# Hämta API-nyckel från OpenAI Dashboard: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key
